<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TravelerDestinationCardDestinationTitleStyle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/traveler_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TravelerDestinationCardDestinationPriceStyle" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/traveler_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
