<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/TravelerViewTravelersContainerFrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="1dp"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:textSize="20sp"
            android:text="Traveler 1"
            android:gravity="center_vertical"
            android:id="@+id/txtTravelerName" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="1dp"
            android:layout_gravity="left" />

    </LinearLayout>
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/TravelerViewTravelersInfoLinearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Podatak 1"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:id="@+id/txtNumberOfPoints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="Podatak 2"
            android:gravity="center_vertical|right"
            android:id="@+id/txtResultPercentage"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    </LinearLayout>
</FrameLayout>

