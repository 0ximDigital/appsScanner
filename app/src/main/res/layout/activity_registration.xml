<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="tscanner.msquared.hr.travelscanner.activities.RegistrationActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/traveler_primary">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_traveler_logo_primary"
            android:layout_gravity="center"
            android:background="@drawable/shape_circle_outline"
            android:paddingRight="0dp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shader_layout_shadow"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TravelerSubtitleText"
                        android:layout_marginTop="20dp"
                        android:text="Username"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/usernameS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TravelerEditTextStyle"
                        android:hint="Username"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textViewEmailS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TravelerSubtitleText"
                        android:text="Email"
                        android:layout_marginTop="12dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <AutoCompleteTextView
                        android:id="@+id/emailS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TravelerEditTextStyle"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textViewPassword1S"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TravelerSubtitleText"
                        android:text="Password"
                        android:layout_marginTop="12dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/passwordS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TravelerEditTextStyle"
                        android:hint="New password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:password="false"
                        android:gravity="center" />


                    <EditText
                        android:id="@+id/passwordRepeatS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TravelerEditTextStyle"
                        android:hint="Repeat password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginTop="12dp"
                        android:password="false"
                        android:gravity="center" />


                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/email_sign_in_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        fab:fab_showShadow="false"
                        android:src="@drawable/ic_navigation_check"
                        fab:fab_colorNormal="@color/traveler_primary"
                        fab:fab_colorPressed="@color/traveler_primary"
                        fab:fab_colorRipple="@color/traveler_primary"
                        fab:fab_label="Login"
                        android:layout_gravity="right"
                        android:layout_marginTop="40dp" />

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>

